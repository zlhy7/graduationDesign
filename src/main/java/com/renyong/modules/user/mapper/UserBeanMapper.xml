<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.renyong.modules.user.dao.UserBeanDao">
    <resultMap id="BaseResultMap" type="com.renyong.modules.user.model.UserBean">
        <id column="user_id" property="id" />
        <result column="user_cd" property="userCd"/>
        <result column="login_name" property="loginName" />
        <result column="password" property="password" />
        <result column="secret_key" property="secretKey" />
        <result column="real_name" property="realName" />
        <result column="user_sex" property="userSex" />
        <result column="user_phone" property="userPhone" />
        <result column="head_portrait" property="headPortrait" />
        <!--公共属性-->
        <result column="create_user" property="createUser.id" jdbcType="VARCHAR" />
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
        <result column="last_update_date" property="lastUpdateDate" jdbcType="TIMESTAMP" />
        <result column="last_update_user" property="lastUpdateUser.id" jdbcType="VARCHAR" />
        <result column="del_flag" property="delFlag" jdbcType="VARCHAR" />
        <result column="remarks" property="remarks" jdbcType="VARCHAR" />
    </resultMap>
    <!--查询单个-->
    <select id="get" resultMap="BaseResultMap">
        SELECT * from SYS_USER WHERE USER_ID = #{id}
    </select>
    <!--查询多个-->
    <select id="findAll" resultMap="BaseResultMap">
        SELECT * from SYS_USER WHERE del_flag = '0'
        <if test="id !=null and id!=''">
            AND user_id = #{id}
        </if>
        <if test="userCd !=null and userCd!=''">
            AND user_cd = #{userCd}
        </if>
        <if test="loginName !=null and loginName!=''">
            AND login_name = #{loginName}
        </if>
        <if test="password !=null and password!=''">
            AND password = #{password}
        </if>
        <if test="secretKey !=null and secretKey!=''">
            AND secret_key = #{secretKey}
        </if>
        <if test="realName !=null and realName!=''">
            AND real_name = #{realName}
        </if>
        <if test="userSex !=null and userSex!=''">
            AND user_sex = #{userSex}
        </if>
        <if test="userPhone !=null and userPhone!=''">
            AND user_phone = #{userPhone}
        </if>
        <if test="headPortrait !=null and headPortrait!=''">
            AND head_portrait = #{headPortrait}
        </if>
        ORDER BY CREATE_DATE DESC
    </select>
    <!--新增-->
    <insert id="insert">
        INSERT INTO SYS_USER
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id !=null and id!=''">
                user_id,
            </if>
            <if test="userCd !=null and userCd!=''">
                user_cd,
            </if>
            <if test="loginName !=null and loginName!=''">
                login_name,
            </if>
            <if test="password !=null and password!=''">
                password,
            </if>
            <if test="secretKey !=null and secretKey!=''">
                secret_key,
            </if>
            <if test="realName !=null and realName!=''">
                real_name,
            </if>
            <if test="userSex !=null and userSex!=''">
               user_sex,
            </if>
            <if test="userPhone !=null and userPhone!=''">
                user_phone,
            </if>
            <if test="headPortrait !=null and headPortrait!=''">
                head_portrait,
            </if>
            <if test="createUser != null" >
                CREATE_USER,
            </if>
            <if test="createDate != null" >
                CREATE_DATE,
            </if>
            <if test="lastUpdateDate != null" >
                LAST_UPDATE_DATE,
            </if>
            <if test="lastUpdateUser != null" >
                LAST_UPDATE_USER,
            </if>
            <if test="delFlag != null" >
                DEL_FLAG,
            </if>
            <if test="remarks != null" >
                REMARKS
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="id !=null and id!=''">
                #{id},
            </if>
            <if test="userCd !=null and userCd!=''">
                #{userCd},
            </if>
            <if test="loginName !=null and loginName!=''">
                #{loginName},
            </if>
            <if test="password !=null and password!=''">
                MD5(#{password}),
            </if>
            <if test="secretKey !=null and secretKey!=''">
                #{secretKey},
            </if>
            <if test="realName !=null and realName!=''">
                #{realName},
            </if>
            <if test="userSex !=null and userSex!=''">
                #{userSex}
            </if>
            <if test="userPhone !=null and userPhone!=''">
                #{userPhone},
            </if>
            <if test="headPortrait !=null and headPortrait!=''">
                #{headPortrait},
            </if>

            <if test="createUser != null" >
                #{createUser.id},
            </if>
            <if test="createDate != null" >
                #{createDate},
            </if>
            <if test="lastUpdateDate != null" >
                #{lastUpdateDate},
            </if>
            <if test="lastUpdateUser != null" >
                #{lastUpdateUser.id},
            </if>
            <if test="delFlag != null" >
                #{delFlag},
            </if>
            <if test="remarks != null" >
                #{remarks}
            </if>
        </trim>
    </insert>
    <!--修改-->
    <update id="update">
        update SYS_USER
        <trim prefix="set" suffixOverrides=",">
            <if test="id !=null and id!=''">
                user_id = #{id},
            </if>
            <if test="userCd !=null and userCd!=''">
                user_cd = #{userCd},
            </if>
            <if test="loginName !=null and loginName!=''">
                login_name = #{loginName},
            </if>
            <if test="password !=null and password!=''">
                password = md5(#{password}),
            </if>
            <if test="secretKey !=null and secretKey!=''">
                secret_key = #{secretKey},
            </if>
            <if test="realName !=null and realName!=''">
                real_name = #{realName},
            </if>
            <if test="userSex !=null and userSex!=''">
                 user_sex = #{userSex},
            </if>
            <if test="userPhone !=null and userPhone!=''">
                 user_phone = #{userPhone},
            </if>
            <if test="headPortrait !=null and headPortrait!=''">
                 head_portrait = #{headPortrait},
            </if>
            <if test="createUser != null" >
                CREATE_USER=#{createUser.id},
            </if>
            <if test="createDate != null" >
                CREATE_DATE=#{createDate},
            </if>
            <if test="lastUpdateDate != null" >
                LAST_UPDATE_DATE=#{lastUpdateDate},
            </if>
            <if test="lastUpdateUser != null" >
                LAST_UPDATE_USER=#{lastUpdateUser.id},
            </if>
            <if test="delFlag != null" >
                DEL_FLAG=#{delFlag},
            </if>
            <if test="remarks != null" >
                REMARKS=#{remarks}
            </if>
        </trim>
        where USER_ID=#{id}
    </update>
    <!--逻辑删除-->
    <update id="delete">
        update SYS_USER
        SET del_flag = '1',
        LAST_UPDATE_DATE=#{lastUpdateDate},
        LAST_UPDATE_USER=#{lastUpdateUser.id}
        where USER_ID=#{id}
    </update>
    <!--物理删除-->
    <delete id="deleteById">
        DELETE FROM SYS_USER WHERE USER_ID = #{id}
    </delete>
</mapper>